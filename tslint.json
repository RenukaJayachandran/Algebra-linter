{
    "allowJs": true,
    "jsRules": {
        "no-empty": true
    },
    "rulesDirectory": "./rules",
    "rules": {
        "no-internal-module": false,
        "typedef-whitespace": false,
        "variable-name": [
            true,
            "check-format",
            "allow-leading-underscore"
        ],
        "no-console": false,
        "no-reference": false,
        "no-namespace": false,
        "max-line-length": [true, 140],
        "no-bitwise": false,
        "align": true,
        "arrow-return-shorthand": true,
        "no-magic-numbers": true,
        "imp": true,
        "sdfg": true
    }
}